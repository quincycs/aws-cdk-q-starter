    "aws-cdk": "latest"
  },
  "dependencies": {
    "@aws-cdk/aws-dynamodb": "*",
    "@aws-cdk/aws-ec2": "*",
    "@aws-cdk/aws-ecs": "*",
    "@aws-cdk/aws-ecs-patterns": "*",
    "@aws-cdk/aws-elasticloadbalancingv2": "*",
    "@aws-cdk/core": "*",
    "@aws-cdk/aws-codepipeline": "*",
